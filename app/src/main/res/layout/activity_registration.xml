<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall_11"
    tools:context=".RegistrationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wall_11"
        tools:context=".RegistrationActivity"
        tools:layout_editor_absoluteX="-129dp"
        tools:layout_editor_absoluteY="-66dp">

        <TextView
            android:id="@+id/UserRegistrationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Registration"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055" />

        <EditText
            android:id="@+id/userRegistrationUserName"
            android:layout_width="351dp"
            android:layout_height="40dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/user2"
            android:drawablePadding="15px"
            android:ems="10"
            android:hint="user name"
            android:inputType="textPersonName"
            android:paddingLeft="25px"
            android:text=""
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userRegistrationFullName"
            app:layout_constraintVertical_bias="0.037" />

        <EditText
            android:id="@+id/userRegistrationPassword"
            android:layout_width="351dp"
            android:layout_height="40dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/password1"
            android:drawablePadding="15px"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="25px"
            android:text=""
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userRegistrationMobile"
            app:layout_constraintVertical_bias="0.059" />

        <EditText
            android:id="@+id/userRegistrationConPassword"
            android:layout_width="351dp"
            android:layout_height="40dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/password1"
            android:drawablePadding="15px"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="25px"
            android:text=""
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userRegistrationPassword"
            app:layout_constraintVertical_bias="0.058" />

        <EditText
            android:id="@+id/userRegistrationMobile"
            android:layout_width="351dp"
            android:layout_height="40dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="15px"
            android:ems="10"
            android:hint="Mobile"
            android:inputType="textPersonName"
            android:paddingLeft="25px"
            android:text=""
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userRegistrationEmail"
            app:layout_constraintVertical_bias="0.048" />

        <EditText
            android:id="@+id/userRegistrationEmail"
            android:layout_width="351dp"
            android:layout_height="40dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="15px"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingLeft="25px"
            android:text=""
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userRegistrationUserName"
            app:layout_constraintVertical_bias="0.04" />

        <EditText
            android:id="@+id/userRegistrationFullName"
            android:layout_width="351dp"
            android:layout_height="40dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/user2"
            android:drawablePadding="15px"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:paddingLeft="25px"
            android:text=""
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UserRegistrationTitle"
            app:layout_constraintVertical_bias="0.064" />

        <Button
            android:id="@+id/RegistrationSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userRegistrationConPassword"
            app:layout_constraintVertical_bias="0.203" />

        <TextView
            android:id="@+id/RegistrationLogin"
            android:layout_width="243dp"
            android:layout_height="51dp"
            android:text="Already have an account?
            Go to Login"
            android:textAlignment="center"
            android:textColor="#DDEFED"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RegistrationSignup"
            app:layout_constraintVertical_bias="0.302" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>