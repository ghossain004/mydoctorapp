<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall_8"
    tools:context=".PatientRegistrationActivity">

    <TextView
        android:id="@+id/PatientRegistrationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Registration"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <EditText
        android:id="@+id/PatientRegistrationFullName"
        android:layout_width="358dp"
        android:layout_height="40dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/user2"
        android:drawablePadding="15px"
        android:ems="10"
        android:hint="Patient Name"
        android:inputType="textPersonName"
        android:paddingLeft="25px"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PatientRegistrationTitle"
        app:layout_constraintVertical_bias="0.061" />

    <EditText
        android:id="@+id/PatientRegistrationNumber"
        android:layout_width="358dp"
        android:layout_height="40dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/number"
        android:drawablePadding="15px"
        android:ems="10"
        android:hint="Registration No"
        android:inputType="textPersonName"
        android:paddingLeft="25px"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PatientRegistrationFullName"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/PatientRegistrationSpeciality"
        android:layout_width="358dp"
        android:layout_height="40dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/specialization"
        android:drawablePadding="15px"
        android:ems="10"
        android:hint="Disease"
        android:inputType="textPersonName"
        android:paddingLeft="25px"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PatientRegistrationNumber"
        app:layout_constraintVertical_bias="0.042" />

    <EditText
        android:id="@+id/PatientRegistrationEmail"
        android:layout_width="358dp"
        android:layout_height="40dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="15px"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="25px"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PatientRegistrationSpeciality"
        app:layout_constraintVertical_bias="0.046" />

    <EditText
        android:id="@+id/PatientRegistrationMobile"
        android:layout_width="358dp"
        android:layout_height="40dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="15px"
        android:ems="10"
        android:hint="Mobile"
        android:inputType="textPersonName"
        android:paddingLeft="25px"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PatientRegistrationEmail"
        app:layout_constraintVertical_bias="0.069" />

    <EditText
        android:id="@+id/PatientRegistrationAge"
        android:layout_width="358dp"
        android:layout_height="40dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/age"
        android:drawablePadding="15px"
        android:ems="10"
        android:hint="Age"
        android:inputType="textPersonName"
        android:paddingLeft="25px"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PatientRegistrationMobile"
        app:layout_constraintVertical_bias="0.075" />

    <Button
        android:id="@+id/buttonPatientSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PatientRegistrationAge"
        app:layout_constraintVertical_bias="0.174" />

    <TextView
        android:id="@+id/PatientRegistrationHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Home"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPatientSignup" />

</androidx.constraintlayout.widget.ConstraintLayout>